<div class="d-flex flex-row">
      <div class="p-2">
        <% if review.user.nil? %>
          <%= image_tag "face.png", class:"avatar" %>
        <% else %>
        <div class="details-reviewer">
          <%= cl_image_tag review.user.photo, height: 40, width: 40, crop: :fill, class: "avatar avatar-review" %> <br>
          <span class="first-name-review"><%= review.user.first_name %></span>
        </div>
        <% end %>
      </div>
      <div class="p-2">
        <p> <% review.rating.times do %>
          <span style="color: #EDB867"> <%= "<i class='fas fa-star'></i>".html_safe %></span>
          <% end %><br>
          <%= review.description %>
        </p>
      </div>
