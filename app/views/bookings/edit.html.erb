<h1>Book</h1>

<%= simple_form_for([@performance, @booking]) do |f| %>
  <%= f.input :date %>
  <%= f.input :time %>
  <%= f.submit %>
<% end %>


<div class="container">

 <div class="card">

    <!-- Card body -->
    <div class="card-body">

      <!-- Material form register -->
      <h1 class="h4 header-signup py-4"> Edit Your Booking <%= @performance.name %> </h1>
      <%= simple_form_for([@performance, @booking]) do |f| %>
        <div class="form-inputs">

          <!-- Material input text -->
          <div class="md-form">
            <i class="far fa-calendar prefix grey-text"></i>
            <%= f.input :date, as: :string, input_html: {class: "datepicker"} %>
          </div>

             <!-- Material input text -->
            <div class="md-form">
              <i class="far fa-clock prefix grey-text"></i>
              <%= f.input :time, as: :string, input_html: {class: "timepicker"} %>
            </div>
          </div>
          <div class="text-center py-4 mt-3">
            <%= f.button :submit, "Update your booking", class:'card-btn btn-block' %>
          </div>
        <% end %>
        <!-- Material form register -->
    </div>
    <!-- Card body -->
  </div>
  <!-- Card -->
</div>
