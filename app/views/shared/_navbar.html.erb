<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to performances_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
       <li class="nav-item active mx-5 p-0">
         <strong><%= link_to "New Performance" , new_performance_path, class: "nav-link" %> </strong>
        </li>
        <li class="nav-item-user-first-name"> <strong> <%= current_user.first_name %> </strong></li>
        <li class="nav-item dropdown">
          <%= cl_image_tag current_user.photo, style: "cursor: pointer;", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Home", root_path, class: "dropdown-item" %>
            <%= link_to "All Performances", performances_path, class: "dropdown-item" %>
            <%= link_to "My Bookings", account_bookings_path, class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <div class="d-flex flex-row-reverse">
            <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
            <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
