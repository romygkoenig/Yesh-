<div class="container">
    <h2>Add your performance</h2>
  <div class="row margin-top">
   <div class="left-half col-sm-6">

    <%= simple_form_for(@performance) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :category %>
      <%= f.input :city %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: 'btn btn-outline-primary'  %>
    <% end %>
    </div>
    <div class="right-half img">

    </div>
  </div>
</div>

