
<div class="container">
  <%= link_to "< All results", performances_path, class: "return-link"%>
  <div class="flexbox">
    <div class="flex-item">
    <h1 class="headers-website">
      <%=@performance.name%>
      <% if @performance.user == current_user %>
        <span> <%= link_to performance_path(@performance), method: :delete do %></span>
           <span data-toggle="tooltip" data-placement="top" title="Delete performance"> <i class="fas fa-trash performance-options"></i></span>
          <% end %>
        <span> <%= link_to edit_performance_path(@performance) do %> </span>
          <span data-toggle="tooltip" data-placement="top" title="Edit performance"><i class="fas fa-edit performance-options"></i></span>
        <% end %>
      <% end %>
    </h1>
    <div class="card-performance">
  <%= cl_image_tag @performance.photo, height: 300, width: 400, crop: :fill %>
  <div class="card-performance-infos">
    <div>
      <h2><%=@performance.category%></h2>
      <p><%=@performance.price%></p>
    </div>
    <h2 class="card-performance-pricing"><%=@performance.price%>$</h2>
  </div>
</div>
</div>

<div class="flex-item">
      <h3>Description</h3>
      <p><%=@performance.description%></p>
      <p><strong>Category:</strong> <%=@performance.category%></p>
      <p><strong>City:</strong> <%=@performance.city%></p>
      <p><strong>Price:</strong> <%=@performance.price%>$ per hour</p>
      <%= link_to "Book", new_performance_booking_path(@performance), class: "card-btn btn-block text-center"%>
    </div>
  </div>
</div>
</div>
  <br>

  <h3>Reviews</h3>
  <%= link_to "Write a review", new_performance_review_path(@performance), class: "card-btn" %>
  <% if @performance.reviews.empty? %>
    <p> <em> <%= "There are no reviews yet" %> </em> </p>
  <% else %>
    <% @performance.reviews.each do |review| %>
    <div class="d-flex flex-row">
      <div class="p-2">
        <% if review.user.nil? %>
          <%= image_tag "face.png", class:"avatar" %>
        <% else %>
        <div class="details-reviewer">
          <%= cl_image_tag review.user.photo, height: 40, width: 40, crop: :fill, class: "avatar avatar-review" %> <br>
          <span class="first-name-review"><%= review.user.first_name %></span>
        </div>
        <% end %>
      </div>
      <div class="p-2">
        <p> <% review.rating.times do %>
          <span style="color: #EDB867"> <%= "<i class='fas fa-star'></i>".html_safe %></span>
          <% end %><br>
          <%= review.description %>
        </p>
      </div>
    </div>
    <% end %>
  <% end %>

</div>
